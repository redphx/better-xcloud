                {
                  "type": "directionalPad",
                  "scale": 1.75,
                  "interaction": {
                    "activationType": "exclusive"
                  }
                }
              ],
              "outer": [
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                },
                {
                  "type": "blank"
                }
              ]
            }
          }
        },
        "left": {
          "inner": [
            {
              "type": "joystick",
              "axis": {
