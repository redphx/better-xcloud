                      "value": "add"
                    }
                  }
                }
              },
              null
            ],
            {
              "type": "button",
              "action": "gamepadA",
              "styles": {
                "default": {
                  "faceImage": {
                    "type": "icon",
                    "value": "handbrake2"
                  }
                }
              }
            },
            null,
            null,
            {
              "type": "button",
              "action": "gamepadX",
              "styles": {
                "default": {
                  "faceImage": {
                    "type": "icon",
                    "value": "subtract"
                  }
                }
              }
            },
            [
              {
                "type": "button",
                "action": "gamepadY",
                "styles": {
                  "default": {
