                    }
                  }
                }
              },
              null
            ]
          ]
        },
        "upper": {
          "right": [
            {
              "type": "button",
              "action": "menu"
            },
            {
              "type": "button",
              "action": "view"
            }
          ]
        }
      }
    }
  }
}
