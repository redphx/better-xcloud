                        }
                     }
                  },
                  {
                     "type":"button",
                     "action":"gamepadX",
                     "styles":{
                        "default":{
                           "faceImage":{
                              "type":"icon",
                              "value":"jump"
                           }
                        }
                     }
                  },
                  {
                     "type":"button",
                     "action":"gamepadY",
                     "styles":{
                        "default":{
                           "faceImage":{
                              "type":"icon",
                              "value":"interact"
                           }
                        }
                     }
                  },
                  {
                     "type":"touchpad",
                     "axis":[
                        {
                           "input":"axisX",
                           "output":"rightJoystickX",
                           "sensitivity":3
                        },
                        {
                           "input":"axisY",
                           "output":"rightJoystickY",
                           "sensitivity":3
                        }
