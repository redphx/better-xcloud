                           }
                        }
                     }
                  },
                  {
                     "type":"touchpad",
                     "axis":[
                        {
                           "input":"axisX",
                           "output":"rightJoystickX",
                           "sensitivity":3
                        },
                        {
                           "input":"axisY",
                           "output":"rightJoystickY",
                           "sensitivity":3
                        }
                     ],
                     "renderAsButton":true,
                     "action":"rightBumper",
                     "styles":{
                        "default":{
                           "knob":{
                              "faceImage":{
                                 "type":"icon",
                                 "value":"rightBumper"
                              },
                              "stroke":{
                                 "opacity":0.1
                              }
                           }
                        }
                     }
                  }
               ]
            },
            "upper":{
               "right":[
                  {
                     "type":"button",
